{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jardin-bruyere/api-service": ["libs/api-service/src/index.ts"],
      "@jardin-bruyere/default": ["libs/default/src/index.ts"],
      "@jardin-bruyere/demonstration": ["libs/demonstration/src/index.ts"],
      "@jardin-bruyere/home": ["libs/home/src/index.ts"],
      "@jardin-bruyere/menu": ["libs/menu/src/index.ts"],
      "@jardin-bruyere/menu-sidenav": ["libs/menu/sidenav/src/index.ts"],
      "@jardin-bruyere/overlay-toolbar": ["libs/overlay/toolbar/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
